<h1 class="mb-4">{{title}}</h1>

<form method="GET" action="/api/committed-crimes" id="form-avg-committed-crimes">
  <div class="row align-items-end">
    <div class="col-sm-12 col-lg-10">
      <div class="form-group">
        <label for="district">District</label>
        <div class="input-group">
          <select class="form-control" id="district" name="district">
            <option value="">Loading options...</option>
          </select>
          <div class="input-group-append">
            <button type="button" class="btn btn-primary" id="btn-add-district">+ Add to Filter</button>
          </div>
        </div>
      </div>
    </div>

    <div class="col-sm-12 col-lg-2">
      <div class="form-group">
        <button type="button" class="btn btn-outline-primary" id="reset-btn">Remove filters</button>
      </div>
    </div>
  </div>

</form>

<div id="district-filter-container" class="d-flex flex-wrap"></div>

<br>

<p class="d-none" id="query-time-text">Query took <span id="query-time-val"></span> ms</p>
<div id="committed-crimes-table"></div>
<h3 class="text-center" id="progress-text"></h3>

<script src="/js/commons.bundle.js"></script>
<script src="/js/districts-committed-crimes.bundle.js"></script>